@model Jogador

@{
    ViewData["Title"]= "Edit";
}

<h1>Edição</h1>

<form>

    <input type="hidden" name="IdJogador" value="@ViewBag.IdJogador">

  <label for="">Nome</label>
  <input type="text" name="Nome" value="ViewBag.Jogador.Nome">

  <label for="">Email</label>
  <input type="email" name="Email" value="ViewBag.Jogador.Email">

  <label for="">Senha</label>
  <input type="password" name="Senha" value="ViewBag.Jogador.Senha">

  <label for="">Equipe</label>
 <select name="IdEquipe" id="SelectEquipe">
    @{
        foreach(Equipe equipe in ViewBag.Equipe)
        {
            @if(equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
            {
                <option value="@equipe.IdEquipe" select>@equipe.Nome</option>
            
            }
        }
        else{ <option value="@equipe.IdEquipe">@equipe.Nome</option>}
    }

    </select>

    <button type = "submit">Salvcar Alteração</button>


</form>