@model Jogador

@{
    ViewData["Title"] = "Jogador";
}
<link rel="stylesheet" href="~/css/jogadores.css">


<!-- MAIN -->
<main>
    <section class="container-grid cadastro-equipes">

       @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">
            Login
            </a>
            <p> Faça o login para acessar essa pagina! </p>
        }
        else
        {

            <form class="frm-cad-equipe" method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>
  

                <input class="campo-entrada"  name= "Nome" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:">

                <input class="campo-entrada"  name= "Email" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:">

                <input class="campo-entrada"  name= "Senha" type="password" id="senha" placeholder="Digite a Senha:">

                <select class="campo-entrada" name= "IdEquipe" id="equipe-select">
                    <option value=""> Escolha uma equipe</option>
                    @foreach (var equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe" > 
                            @equipe.Nome
                        </option>
                    }

                </select>
            
                <button>Cadastrar</button>
            </form>




            <!-- TABELA CADASTRO DE EQUIPES -->
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>&spades;</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr>
                            <td>@jogador.IdJogador</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                               
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                                    asp-route-id="@jogador.IdJogador"><img
                                        class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Editar"
                                    asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/edit-icon.png" alt=""></a>
                            </td>
                        </tr>
                    }
                    @* <tr>
                        <td>1</td>
                        <td><img class="yellow-trash" src="./assets/trash.png" alt=""></td>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td><img class="yellow-trash" src="./assets/trash.png" alt=""></td>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td><img class="yellow-trash" src="./assets/trash.png" alt=""></td>
                    </tr> *@
                </tbody>
            </table>
     }  
        </section>

    </main>














